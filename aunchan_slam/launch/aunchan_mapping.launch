<launch>
    <!-- <arg name="odom_frame_name" default="base_footprint"/> -->
    <node pkg="hector_mapping" type="hector_mapping" name="hector_height_mapping" output="screen">
        <param name="base_frame" value="base_footprint"/>
        <param name="map_frame" value="map"/>
        <!-- <param name="odom_frame" value="$(arg odom_frame_name)"/> -->
        <param name="odom_frame" value="base_footprint"/>
        <!-- <param name="odom_frame" value="odom"/> -->

        <param name="map_resolution" value="0.01"/>
        <param name="map_size" value="1024"/>
        <param name="map_start_x" value="0.5"/>
        <param name="map_start_y" value="0.5"/>

        <param name="map_update_distance_thresh" value="0.02"/>
        <param name="map_update_angle_thresh" value="0.01"/>
        <param name="map_pub_period" value=""/>
        <param name="map_multi_res_levels" value="2"/>

        <param name="update_factor_free" value="0.45"/>
        <param name="update_factor_occupied" value="0.9"/>

        <param name="laser_min_dist" value="0.15"/>
        <param name="laser_max_dist" value="4.0"/>
        <param name="laser_z_min_value" value="-0.05"/>
        <param name="laser_z_max_value" value="0.05"/>  

        <param name="pub_map_odom_transform" value="true"/>
        <param name="output_timing" value="false"/>
        <param name="scan_subscriber_queue_size" value="5"/>

        <param name="scan_topic" value="scan" />

        <param name="advertise_map_service" value="true"/>
        <param name="use_tf_scan_transformation" value="true"/>
        <param name="use_tf_pose_start_estimate" value="false"/>

        <param name="map_with_known_poses" value="false"/>
    </node>

     <!-- <include file="$(find hector_geotiff)/launch/geotiff_mapper.launch"/>  -->
</launch>